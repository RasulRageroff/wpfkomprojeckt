<Page x:Class="komproject.page_pcaccessories_informations.cpuinfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:komproject.page_pcaccessories_informations"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      FontFamily="Segoe Print"
      Title="cpuinfo">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="5">
            <Button  Name="BtnGoback" Click="BtnGoback_Click" Width="50" Height="35" Margin="5" Background="Black" FontFamily="Segoe Print" Foreground="White">Назад</Button>

        </StackPanel>
        <StackPanel   Orientation="Horizontal" Width="300" Height="100">
            <TextBlock FontSize="24" Foreground="Red">Модель</TextBlock>
            <TextBlock FontSize="24" Name="txtcpuname" Margin="30 0 0 0"></TextBlock>
        </StackPanel>
        <StackPanel   Orientation="Horizontal" Width="300" Height="100" Margin="0 120 0 0">
            <TextBlock FontSize="24" Foreground="Red">Цена</TextBlock>
            <TextBlock FontSize="24" Name="txtcpuprice" Margin="30 0 0 0"></TextBlock>
        </StackPanel>

        

    </Grid>
</Page>
